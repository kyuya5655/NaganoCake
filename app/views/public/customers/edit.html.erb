<h1>会員情報編集</h1>

<%= form_with model: current_customer, url: customers_path do |f| %>
    <div class="form-group">
      <div class="name">氏名
       <label for="customer_name"></label>
       <%= f.text_field :last_name, autofocus: true, placeholder:"姓" %>
       <%= f.text_field :first_name, autofocus: true, placeholder:"名" %>
      </div>
    </div>

    <div class="form-group">
      <div class="name_kana">フリガナ
       <label for="customer_name_kana"></label>
       <%= f.text_field :last_name_kana, autofocus: true, placeholder:"セイ" %>
       <%= f.text_field :first_name_kana, autofocus: true, placeholder:"メイ" %>
      </div>
    </div>

    <div class="form-group">
      <div class="postal_code">郵便番号
       <label for="postal_code"></label>
       <%= f.text_field :postal_code, autofocus: true, placeholder:"郵便番号" %>
      </div>
    </div>

    <div class="form-group">
      <div class="address">住所
       <label for="address"></label>
       <%= f.text_field :address, autofocus: true, placeholder:"住所" %>
      </div>
    </div>

    <div class="form-group">
      <div class="telephone_number">電話番号
       <label for="telephone_number"></label>
       <%= f.text_field :telephone_number, autofocus: true, placeholder:"電話番号" %>
      </div>
    </div>

    <div class="form-group">
      <div class="email">メールアドレス
       <label for="email"></label>
       <%= f.text_field :email, autofocus: true, placeholder:"メールアドレス" %>
      </div>
    </div>

    <%= f.submit "編集内容を保存" %>
<% end %>
<%= link_to "退会する", quit_check_path %>