<h3>注文履歴詳細</h3>

<h4>注文情報</h4>

<table border="1" cellspacing="0" cellpadding="0">
  <tr>
    <td>注文日</td>
    <td class="order_created_at">
      <%= l @order.created_at %>
    </td>
  </tr>
  <tr>
    <td>配送先</td>
    <td class="order_address,postal_codes">
      <%= "〒" + @order.postal_code %></br>
      <%= @order.address %></br>
      <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td class="order_payment_method">
      <%= @order.payment_method_i18n %>
    </td>
  </tr>
</table>

<h4>請求情報</h4>
<table  border="1" cellspacing="0" cellpadding="0">
  <tr>
    <td>商品合計</td>
    <td><%= @order.total_payment - @order.postage %></td>
  </tr>
  <tr>
    <td>配送料</td>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <td>ご請求額</td>
    <td><%= @order.total_payment %></td>
  </tr>
</table>

<h4>注文内容</h4>
<table  border="1" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.item.with_tax_price %></td>
      <td><%= order_detail.amount %></td>
      <td><%= order_detail.subtotal %></td>
    </tr>
    <% end %>
  </tbody>
</table>