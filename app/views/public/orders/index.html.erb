<h3>注文履歴一覧</h3>

<table border="1" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <% @orders.each do |order| %>
  <tbody>
      <td><%= l order.created_at %></td>
      <td>
        <%= "〒" + order.postal_code %></br>
        <%= order.address %></br>
        <%= order.name %>
      </td>
      <td>
      <% order.items.each do |item| %>
      <%= item.name %></br>
      <% end %>
      </td>
      <td><%= order.total_payment %>円</td>
      <td><%= link_to "表示する", order_path(order.id) %></td>
  </tbody>
  <% end %>
</table>