<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path do |f| %>

   <div class="form_group">
     <label for="item_image">商品画像</label>
     <%= f.file_field :item_image, accept: "image/*" %>
   </div>

   <div class="form-group">
     <label for="item_name">商品名</label>
     <%= f.text_field :name %>
   </div>

   <div class="form_group">
     <label for="item_introduction">商品説明</label></br>
     <%= f.text_area :introduction %>
   </div>

   <div class="form_group">
     <label for="item_price">税抜価格</label></br>
     <%= f.text_field :price %>
   </div>

    <div class="form_group">
     <%= f.submit '新規登録',class:"btn btn-success" %>
    </div>
<% end %>