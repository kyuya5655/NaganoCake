<h2>商品一覧</h2>

<%= link_to new_admin_item_path do %>
  <i class="fa-solid fa-plus fa-2xl"></i>
<% end %>

<table class="itemss">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>

  <% @items.each do |item| %>
      <tbody>
       <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price %></td>
       </tr>
      </tbody>
      <% end %>
</table>

<%= paginate @items %>