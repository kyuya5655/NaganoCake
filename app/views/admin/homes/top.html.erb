<h1>注文履歴一覧</h1>

<table border="1" cellspacing="0" cellpadding="0">
  <thead>
   <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
   </tr>
  </thead>

  <% @orders.each do |order| %>
  <tbody>
    <td>
      <%= link_to admin_path(order.id) do %>
      <%= l order.created_at %>
      <% end %>
    </td>
    <td><%= order.name %></td>
    <td>
      <%= order.order_details.sum(:amount) %>
    </td>
  </tbody>
  <% end %>
</table>

<%= paginate @orders %>